<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr> 
        <td><%= task.name %></td>
        <td><%= link_to "Show", lecture_task_path(params[:lecture_id], task) %></td> 
        <td><%= link_to "Edit", edit_lecture_task_path(params[:lecture_id], task) %></td> 
        <td><%= link_to "Delete", lecture_task_path(params[:lecture_id], task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  <br>
  <%= link_to "New task", new_lecture_task_path %>
  <br>
  <%= link_to "Lectures", lectures_path %>
</p>
